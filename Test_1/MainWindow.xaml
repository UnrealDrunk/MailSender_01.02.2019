<Window x:Class="Test_MailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xckt="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:Test_MailSender"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Test_1.ViewModels"
        Title="Tasks" Height="520" Width="880">
    <Grid>
        <StackPanel>
            <UniformGrid Rows="1">
                <Button Click="OnStartButtonClick">Запуск</Button>
                <Button Click="OnCancelButtonClick">Остановка</Button>
            </UniformGrid>
            <ProgressBar Name="_Progress" Height="30"/>
            <TextBlock>
                Результат: <Run Name ="Result">Отсутствует</Run>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
